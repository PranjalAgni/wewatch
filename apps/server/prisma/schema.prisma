generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}


model Room {
  id        String   @id @default(cuid())
  code      String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
  isActive  Boolean  @default(true)
  
  @@index([code])
  @@index([createdAt])
}

model Message {
  id        String   @id @default(cuid())
  code      String      
  username  String
  content   String      
  replyToId String?
  createdAt DateTime @default(now())
}
